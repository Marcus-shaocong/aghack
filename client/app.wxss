@import 'style/weui.wxss';

.html {
  /* background: #eee; */
 background: #FFE02A
}

.pic_placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.page {
  background-color: #FFE02A;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  height: 100%;
}

/* main background  */
.theme-bg {
  background-color: #FFE02A;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}


.centered {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

